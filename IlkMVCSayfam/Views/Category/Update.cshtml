@model Category
@{
    ViewBag.Title = "Update";
}

<div class="container">
    <div><h2>@Html.Raw(ViewBag.Message)</h2></div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            @using (Html.BeginForm("Update", "Category", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.CategoryID)
                <div class="form-group">
                    <label for="CategoryName">Category Name</label>
                    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", placeholder = "Category Name" })
                </div>
                <div class="form-group">
                    <label for="Description">Description</label>
                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = "Description" })
                </div>
                <button type="submit" class="btn btn-info">Update</button>
            }
        </div>
    </div>
</div>

